<div id="posts-container" class="row">

    {{#each Posts}}

        <div class="col s12 post-block">
            <div class="date-container black">
                <i class="material-icons white-text">date_range</i>
                <span class="date-container--date white-text">{{date}}</span>
            </div>
            <article class="post-block--article white">

                <h1 class="post-block--title">{{title}}</h1>

                <hr/>

                <div class="flex-vertical-center">
                    <span class="post-block--tagged-in">Tagged in: </span>

                    {{#each tags}}

                        <span class="flex-vertical-center">
                            <i class="material-icons post-block--tag-icon">label</i>
                            <span class="post-block--tag-text">{{this}}</span>
                        </span>

                    {{/each}}
                </div>

                <hr/>

                <div class="post-block--content light">{{{content}}}</div>
            </article>
            <div class="fb-comments" data-width="100%" data-href="{{commentsLocation}}" data-numposts="5"></div>
        </div>

    {{/each}}
</div>